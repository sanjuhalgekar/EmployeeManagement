
@model AddPasswordViewModel

@{
    ViewData["Title"] = "Add Password";
}

<form method="post" class="mb-3">

    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mb-3">
            <strong>Please correct the following errors : </strong>
            <div asp-validation-summary="All"></div>
        </div>
        <hr />
    }

    <div class="mb-3">
        <p>
            You have use an external account to login and do not have a local username/password.
            Simply yeta new passwordif you wantto login using a local account. Use your email as  the username.
        </p>
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <hr />
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Set Password</button>
    </div>
</form>