
@model RegisterViewModel

@{
    ViewData["Title"] = "User Registration";
}

<form method="post" class="mb-3">

    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mb-3">
            <strong>Please correct the following errors : </strong>
            <div asp-validation-summary="All"></div>
        </div>
        <hr />
    }

    <div class="mb-3">
        <label asp-for="EmailId" class="form-label"></label>
        <input asp-for="EmailId" class="form-control" placeholder="User Id" />
        <span asp-validation-for="EmailId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <hr />
    <div class="mb-3">
        <a asp-controller="Account" asp-action="login" class="btn btn-primary me-2">Back</a>
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>

