
@model EditEmployeeViewModel

@{
    ViewBag.Title = "Edit Employee Details";
    var imagePath = "";

    if(Model != null)
    {
        // string gender = Model.Gender == Gender.Male ? "Sample-Male.jpg" : "Sample-Female.jpg";
        string gender = (Model.Gender ?? Gender.NotSelected) == Gender.Male ? "Sample-Male.jpg" : "Sample-Female.jpg";

        string imageFile = string.IsNullOrEmpty(Model.PhotoPath) ? gender : Model.PhotoPath;
        imagePath = Url.Content("~/images/" + imageFile);
    }
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="Edit" method="post" class="mb-3">

    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mb-3">
            <strong>Please correct the following errors : </strong>
            <div asp-validation-summary="All"></div>
        </div>
        <hr />
    }   

    <input hidden asp-for="Id" />

    <div class="mb-3">
        <img class="card-img-top" src="@imagePath" alt="Employee" style="width: 500px; height: 500px; object-fit: cover;" asp-append-version="true" />
    </div>
    <hr />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Office Email Id" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-select"></select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="form-label"></label>
        <div class="mb-3">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control" type="file" id="formFile">
            </div>
        </div>
    </div>
    <hr />
    <div class="mb-3">
        <a asp-controller="home" asp-action="index" class="btn btn-primary me-2">Back</a>
        <button type="submit" class="btn btn-primary me-2">Update</button>
        <a asp-controller="home" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
   
</form>