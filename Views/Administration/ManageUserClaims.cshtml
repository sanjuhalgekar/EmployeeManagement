
@model UserClaimsViewModel

@{
    ViewBag.Title = "Manage User Claims";
}

<form method="post">
    <hr />
    <div class="container mt-4">
        <div class="col-12">
            <div class="card mb-4">

                <div class="card-header">
                    <h2>Manage User Claims</h2>
                </div>

                <div class="card-body">
                    @for (int i = 0; i < Model.Claims.Count; i++)
                    {
                        <div class="form-check mb-2">
                            <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />

                            <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" type="checkbox" id="check_@i" />
                            <label class="form-check-label" for="check_@i">
                                @Model.Claims[i].ClaimType
                            </label>
                        </div>
                    }
                </div>

                <div class="card-footer text-start">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-userId="@Model.UserId" class="btn btn-primary me-2">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</form>